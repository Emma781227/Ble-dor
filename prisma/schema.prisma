generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String      @id @default(cuid())
  name        String
  price       Float
  category    String
  description String?
  imageUrl    String?
  isAvailable Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]

    favorites        Favorite[]

}

enum Role {
  OWNER // Propriétaire
  MANAGER // Gérant
  CLIENT // Client
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  name           String?
  role           Role     @default(CLIENT)
  passwordHash   String?

  phone          String?
  marketingOptIn Boolean  @default(false)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  managedOrders  Order[]  @relation("ManagerOrders")

  passwordResetTokens PasswordResetToken[] @relation("UserPasswordResetTokens")

    favorites        Favorite[]

}





enum OrderStatus {
  PENDING // En attente / prise de commande
  PREPARATION // En préparation
  READY // Prête
  DELIVERED // Livrée / terminée
  CANCELED // Annulée
}

enum PaymentMethod {
  CASH // Espèces
  CARD // Carte bancaire
  MOBILE // Paiement mobile
  OTHER // Autre
}

model Order {
  id            String        @id @default(cuid())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  status        OrderStatus   @default(PENDING)
  total         Float
  paymentMethod PaymentMethod

  ticketNumber  String?
  customerName  String?
  customerNote  String?

  manager       User?   @relation("ManagerOrders", fields: [managerId], references: [id])
  managerId     String?

  items         OrderItem[]
}




model OrderItem {
  id        String @id @default(cuid())
  quantity  Int
  unitPrice Float

  order   Order  @relation(fields: [orderId], references: [id])
  orderId String

  product   Product @relation(fields: [productId], references: [id])
  productId String
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation("UserPasswordResetTokens", fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  productId String

  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, productId])
}


